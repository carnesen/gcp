{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitReturns": true,
    "pretty": true,
    "strict": true,
  },
  "include": [
    "src/**/*"
  ]
}